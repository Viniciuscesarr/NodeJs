<%- include("../layouts/main") %>
<div class="container">
  <h1>Todas as tasks</h1>
  <ul class="task-list">
    <% tasks.forEach(function(task){ %>
    <li>
      <a href="/" class="title"><%= task.title %></a>
      <div class="actions">
        <a href=""><i class="bi bi-check2"></i></a>
        <a href="/tasks/edit/<%= task.id %>"
          ><i class="bi bi-pencil-square"></i
        ></a>
        <form action="/tasks/remove" method="POST">
          <input type="hidden" name="id" value="<%= task.id %>" /><button
            type="submit"
          >
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
    <% }) %>
  </ul>
</div>
